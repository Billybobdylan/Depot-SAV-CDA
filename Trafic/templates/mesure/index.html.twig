         {% for module in module %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 ">
                        <div class="bordure-grise px-3 pt-3 mb-3 shadow">
                            <a href="/module/{{ module.id }}">
